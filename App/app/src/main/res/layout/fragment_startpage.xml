<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="24sp"
    android:layout_marginEnd="24sp"
    tools:context="com.example.android.navigation.StartPage">

    <data>

        <variable
            name="start"
            type="com.example.android.navigation.StartPageFragment" />
    </data>


    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/background"
        android:orientation="vertical">

        <Button
            android:id="@+id/scheduleButton"
            style="@style/Buttons"
            android:layout_marginTop="18sp"
            android:text="@string/schedule"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/refillButton"
            style="@style/Buttons"
            android:text="@string/refill_pills"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.543"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scheduleButton" />

        <Button
            android:id="@+id/button3"
            style="@style/Buttons"
            android:text="Button 3"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/refillButton" />

        <Button
            android:id="@+id/button4"
            style="@style/Buttons"
            android:layout_height="82dp"

            android:layout_marginBottom="24sp"
            android:text="Button 4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />
    </LinearLayout>
</layout>